<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.carlosdonado.calculadora.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="x!"
                            android:id="@+id/button" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="√"
                            android:id="@+id/button2" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="%"
                            android:id="@+id/button3" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="sin"
                            android:id="@+id/button4" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="cos"
                            android:id="@+id/button14" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="tan"
                            android:id="@+id/button15" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="in"
                            android:id="@+id/button5" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="log"
                            android:id="@+id/button12" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="1/x"
                            android:id="@+id/button13" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="e^x"
                            android:id="@+id/button6" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="x^2"
                            android:id="@+id/button10" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="y^x"
                            android:id="@+id/button11" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="|x|"
                            android:id="@+id/button7" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="π"
                            android:id="@+id/button8" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="e"
                            android:id="@+id/button9" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="C"
                            android:id="@+id/btnC" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="/"
                            android:id="@+id/btnDiv" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="*"
                            android:id="@+id/btnMul" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="⌫"
                            android:id="@+id/btnBack" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="7"
                            android:id="@+id/btn7" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="8"
                            android:id="@+id/btn8" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="9"
                            android:id="@+id/btn9" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="-"
                            android:id="@+id/btnSub" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="4"
                            android:id="@+id/btn4" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="5"
                            android:id="@+id/btn5" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="6"
                            android:id="@+id/btn6" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="+"
                            android:id="@+id/btnAdd" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="1"
                            android:id="@+id/btn1" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="2"
                            android:id="@+id/btn2" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="3"
                            android:id="@+id/btn3" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="()"
                            android:id="@+id/btnPer" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="0"
                            android:id="@+id/btnZero" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="."
                            android:id="@+id/btnPoint" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="+/-"
                            android:id="@+id/btnMM" />

                        <Button
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:text="="
                            android:id="@+id/btnResult" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
